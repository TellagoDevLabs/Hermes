<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/public/css/default.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript" ></script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>HERMES PORTAL</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <hr />
            <ul id="menu">
                <li class="label">VIEW</li>
                <li class="selected">@Html.ActionLink("Home", "Index","Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>

        <div id="main">
            <ul id="home-highlights" class="highlights">
                <li>@Html.ActionLink("Groups", "Index", "Group")</li>
                <li>@Html.ActionLink("Topics", "Index", "Topic")</li>
                <li>Messages</li>
            </ul>
            <div class="main-content" style="clear: both">
            @RenderBody()
            </div>
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
